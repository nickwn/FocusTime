     </form>-->

      </br>
      <form action="/delete">
        <input type="submit" id="delet" value="Delete Event"data-role="none">
        <input type="hidden" name="name" value='{{name}}'data-role="none">
      </form>
      </br>
      <a id="return" href="/sessions">
        <input type="button" value="Return Home"data-role="none">
      </a>
      <a id="endlnk" href="/finished?name={{name}}&result=failed">
        <input type="button" id="end" value="Return Home"data-role="none">
      </a>
      <script>
        $("#endlnk").hide();
      </script>
    </div>
